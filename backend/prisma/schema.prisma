generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EmailStatus {
  SCHEDULED
  SENT
  FAILED
}

model Email {
  id          String      @id @default(uuid())
  recipient   String
  subject     String
  body        String
  scheduledAt DateTime
  status      EmailStatus @default(SCHEDULED)
  error       String?
  createdAt   DateTime    @default(now())
  sentAt      DateTime?
}
